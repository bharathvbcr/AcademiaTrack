{
  "name": "academia-track",
  "private": true,
  "version": "4.2.1",
  "description": "Academic Application Tracker - Track universities, programs, deadlines, and submissions",
  "author": "BHARATH CHANDRA VADDARAM <bharath.vbcr@gmail.com>",
  "homepage": "https://github.com/bharathvbcr/AcademiaTrack",
  "repository": {
    "type": "git",
    "url": "https://github.com/bharathvbcr/AcademiaTrack.git"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "build:electron": "npm run build && cross-env NODE_ENV=production electron-builder"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "canvas-confetti": "^1.9.3",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.3.9",
    "framer-motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.3.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "png2icons": "^2.0.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.bharathvbcr.academia-track",
    "productName": "AcademiaTrack",
    "icon": "assets/icon.png",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "compression": "maximum",
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "electron/preload.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "bharathvbcr",
      "repo": "AcademiaTrack"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signingHashAlgorithms": [
        "sha256"
      ],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "category": "public.app-category.education",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "identity": null,
      "notarize": false
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education",
      "desktop": {
        "Name": "AcademiaTrack",
        "Comment": "Academic Application Tracker",
        "Categories": "Education;Office;",
        "Keywords": "university;application;tracker;academic;"
      }
    },
    "afterSign": "scripts/notarize.js"
  }
}