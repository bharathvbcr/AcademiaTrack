{
  "name": "academia-track",
  "private": true,
  "version": "3.1.1",
  "description": "Application Tracker",
  "author": "BHARATH CHANDRA VADDARAM <bharath.vbcr@gmail.com>",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "build:electron": "npm run build && cross-env NODE_ENV=production electron-builder"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "canvas-confetti": "^1.9.3",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.3.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.example.academia-track",
    "productName": "AcademiaTrack",
    "icon": "AcademiaTrack.png",
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "electron/preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}